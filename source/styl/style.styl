@import url("http://fonts.googleapis.com/css?family=Roboto:400,300,500,700&subset=cyrillic,latin")
@import "css/normalize.css"
@import "_tools"
@import "_common"
@import "_flexiblegs"


small = "(min-height 700px) and (min-width 1300px)"
fullhd = "(min-height 850px) and (min-width 1700px)"


//	#layout
// ===============================================
html
	height 100%
.page-body
	overflow-y scroll
	height 100%
	min-width 1320px
	font-main()
	background #eeeeee
.page-white
	background color-white
.ilkome
	display table
	table-layout fixed
	position relative
	width 100%
	min-width 1270px
	min-height 100%
@-moz-document url-prefix()
	.ilkome
		height 100%

.sysmenu
	background #fff
	ul
		display inline-block
		li
			text-align left
			white-space nowrap
	&.is-fixed
		position fixed
		z-index 100
		left 0
		top 0
		opacity 0
		&:hover
			opacity 1
		ul
			lino()
		li
			float left
		a
			display inline-block
			padding 5px

.l-left
	display table-cell
	position relative
	width 260px
	vertical-align top
	background color-black
	@media small
		z-index 10
		position fixed
		display block
		left 0
		top 0
		height 100%
.l-right
	display table-cell 
	position relative
	width 100%
	padding 20px 20px 130px 20px
	full()
	vertical-align top
	anim()
		&.has-padding
			padding-top 20px
	@media small
		padding-left 280px

.row
	dt()
.row-auto
	dt("auto")
	> .col 
		width auto
		vertical-align middle
.col
	width 100%
	dtc()
	vertical-align top
	full()
	&.is-middle
		vertical-align middle
.col-30
	width 30%
	padding-right 10px
.col-70
	width 70%
	padding-left 10px
.row-2
	> .col
		width 50%
		&.col-40
			width 40%
		&.col-60
			width 60%
	> .col:first-child
		padding-right 10px
	> .col:last-child
		padding-left 10px
.row-3
	> .col
		width 33.333%
	> .col:first-child
		padding-right 10px
	> .col:last-child
		padding-left 10px
.pad-b-80
	padding-bottom 80px


//	#btns
// ===============================================
.btn
	display inline-block
	width 200px
	padding 20px 10px
	full() 
	text-transform uppercase
	white-space nowrap
	color color-white
	font-size 13px
	line-height 16px
	font-bold()
	text-align center
	border-radius 3px
	&:hover
		color color-white
.btn-small
	width 150px
	padding 10px 10px
	font-light()
.btn-blue
	@extend .btn
	background color-blue
	&:hover
		background #599cc8
.btn-green
	@extend .btn
	background #3cc8b4
	&:hover
		background #1abca5
.btn-grey
	@extend .btn
	color #A2A2A2
	background #e7e7e7
	&:hover
		color #A2A2A2
		background #dedede
.btn-red
	@extend .btn
	background color-red
	&:hover
		background #bd5e5e
.btn-blue-dotted
	display block
	width 100%
	full()
	padding 15px
	font-size 16px
	color #50b3a5
	text-align center
	border 1px dashed #50b3a5
	border-radius 4px
	&:hover
		color alpha(#50b3a5, .7)
		border-color alpha(#50b3a5, .7)


//	#icon
// ===============================================
.icon
	display inline-block
	vertical-align baseline
.icon-medals
	font-size 30px
	display inline-block
	padding-right 25px
	background url("../img/icons/medal.png") center right no-repeat
	&.has-margin
		margin-right 15px


//	#main
// ===============================================

//	#content
.contentbox
	padding-top 60px
