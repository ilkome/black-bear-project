//	tools
// ===============================================
clearfix()
	&:before
	&:after
		content ""
		display table
		clear both
.clear
	clearfix()
full()
	box-sizing border-box
hide()
	display none
.hide 
	hide()


//	#display
.full
	full()
.full_100
	full()
	width 100%
dt()
	display table
dtc()
	display table-cell 
	vertical-align top
.inline
	display inline
*, *:before, *:after
	box-sizing border-box
@-ms-viewport
	width device-width

//	#position
.fl-left
	float left
.fl-right
	float right
.center
	text-align center
.align-right
	text-align right
.middle
	vertical-align middle


//	#pad-marg
mrgno()
	margin 0
pdnno()
	padding 0
.margin-no
	margin 0

//	#decoration
pointer()
	cursor pointer
cover()
	background-size cover
tdn()
	text-decoration none
tdu()
	text-decoration underline


//	#animation
anim()
	transition 0.3s ease-out
anim-all()
	transition all 0.3s ease-out
anim-bg()
	transition background-image 0.3s ease-out
anim-color()
	transition color 0.3s ease-out
anim-op()
	transition opacity 0.3s ease-out
anim-none()
	transition none


//	#list
lino()
	margin 0 
	list-style none
	li
		margin 0
		list-style none