clearfix()
	&:before
	&:after
		content ""
		display table
		clear both
.clear
	clearfix()


//	#display
// ===============================================
hide()
	display none
	
.hide 
	hide()
	
.w100
	width 100%
	
dt(auto = false)
	display table
	width 100%
	if auto
		table-layout auto
	else
		table-layout fixed
	
dtc()
	display table-cell 
	vertical-align top
	
.inline
	display inline
	
*, *:before, *:after
	box-sizing border-box
	
@-ms-viewport
	width device-width


//	#position
// ===============================================
.fl-left
	float left
	
.fl-right
	float right

.center
	text-align center

.align-right
	text-align right

.align-left
	text-align left

.middle
	vertical-align middle


//	#pad-marg
// ===============================================
mrgno()
	margin 0

pdnno()
	padding 0

.margin-no
	margin 0


//	#decoration
// ===============================================
pointer()
	cursor pointer

cover()
	background-size cover

tdn()
	text-decoration none

tdu()
	text-decoration underline


//	#animation
// ===============================================
anim(time = false)
	if time
		transition time
	else
		transition 0.3s ease-out

anim-all()
	transition all 0.3s ease-out

anim-bg()
	transition background-image 0.3s ease-out

anim-color()
	transition color 0.3s ease-out

anim-op()
	transition opacity 0.3s ease-out

anim-none()
	transition none


//	#list
// ===============================================
lino()
	margin 0 
	list-style none
	li
		margin 0
		list-style none