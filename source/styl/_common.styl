//	#vars
// ===============================================
color-grey = #f5f5f3
color-grey-med = #e5e5e2
color-grey-dark = #9A9A9A
color-blue = #0072B9
color-blue-grey = #7E919B
color-blue-light = #f4f8ff
color-red = #a81d37
color-red-grey = #f5f5f5
color-black = #54585a

linebottom()
	margin-bottom 15px
	padding-bottom 9px
	border-bottom 6px solid #ccd8ed
font-main()
	color color-black
	font-size 14px
font-12()
	font-size 12px
font-link()
	color color-blue
font-header()
	color #252728
	font-weight normal
font-form()
	color #819397
	font-size 16px
font-grey()
	color color-grey-dark
bg-grey()
	background #f5f5f3


//	#reset
// ===============================================
*
	margin 0
	padding 0
	border 0
	outline 0
	
table
	width 100%
	td
		vertical-align top

body
	font-main()


//	#list
ul
	margin 0 0 15px 10px
	li
		margin 0 0 15px 15px
		list-style disc outside
		ul, ol
			margin 15px 0 10px 0
ol
	margin 0 0 15px 0
	li
		margin 0 0 15px 15px
		list-style decimal inside
		ul, ol
			margin 15px 0 10px 0
.no-list-style 
	margin 0
	li
		margin-left 0
		list-style-type none

//	#text
.font-grey-small
	font-size 12px
	color color-grey-dark
p
	margin-bottom 20px


//	#links
a
	font-link()
	text-decoration none
	anim-all()
	&:hover
		text-decoration underline
	&.active
		cursor default 
		tdn()
li.is-active a 
	cursor default
	tdn()


//	#headers
h1, h2, h3, h4, h5, h6
	margin 0 0 30px 0
	font-header()
h1
	font-size 40px
h2
	font-size 36px
h3
	font-size 28px
h4
	font-size 16px


//	#form
label, input, button, select, textarea
	font-form()

select
	width auto
	margin-bottom 10px
	padding 4px 10px
	full()
	background #fff
	border 1px solid #c8d9eb
	color #819397
	font-size 16px
	option
		padding 5px 10px
		color color-grey-dark
.select_dark
	color color-grey-dark
	font-size 12px
	border 1px solid #d6d6d4 
	option
		color color-grey-dark
.select_full
	width 100%

input[type="text"]
input[type="password"]
input[type="email"]
input[type="phone"]
	width 300px
	margin-bottom 10px
	padding 15px 15px
	full()
	background #fff
	border 1px solid #c8d9eb
	anim()
	&:hover
	&:focus
		background #f4f9ff
	&.error
		border-color #e44343
		color #e44343
	&.valid
		border-color #3ac020
input.inp_dark
	font-size 14px
	color #777
	padding 10px 10px
	border 1px solid #d6d6d4 
	&:hover
	&:focus
		background #fff
		border-color color-blue-grey

input[type="submit"]
	width auto
	padding 15px 30px
	border none
	anim()
	&:hover
		background #1aa257
	&:active
		opacity 0.8

textarea
	width 238px
	max-width 100%
	height 200px
	margin-bottom 10px
	padding 10px 10px
	full()
	background #fff
	border 1px solid #c8d9eb
	anim()
	&:hover
	&:focus
		background #f4f9ff
.textarea_full
	width 100%

//	#radio
input[type="radio"] + label 
	cursor:pointer
	margin:0px 20px 0px 0
	font-form()
input[type="radio"] + label::before 
	content " "
	display inline-block
	height 18px
	width 18px
	margin 0 10px -3px 0px
	background url("../img/radio.png") no-repeat;
input[type="radio"]
	display:none
input[type="radio"]:disabled + label 
	cursor:default
input[type="radio"] + label:hover::before
	background-position 0px 0px
input[type="radio"]:checked + label::before 
	background-position 0 -18px
input[type="radio"]:disabled + label::before 
	background-position:0px 0px
	opacity .8
input[type="radio"]:checked:disabled + label::before 
	background-position 0px -18px
	opacity .8
input.inp_full
	width 100%
	full()

//	#checkbox
input[type="checkbox"]
	width 21px
	height 21px
	margin 0 3px 0 0
	vertical-align top
input[type="checkbox"]
	& + label
		cursor pointer
	&:not(checked)
		position absolute
		opacity 0
		& + label
			position relative
			display inline-block
			padding 0 0 0 35px
			font-size 14px
		& + label:after
			content ''
			position absolute
			top -3px
			left 0px
			width 21px
			height 21px
			background url("../img/checkbox-b.png") no-repeat
	&:checked
		//	checked
		& + label:after
			background-position 0 -21px
		//	focus
		& + label:before
			position relative
			
input[type="checkbox"].checkbox-right
	& + label
		cursor pointer
	&:not(checked)
		position absolute
		opacity 0
		& + label
			position relative
			display block
			padding 0 40px 0 0
			font-size 14px
		& + label:after
			content ''
			position absolute
			top 3px
			left inherit
			right 0px
			width 11px
			height 11px
			background url("../img/checkbox.png") no-repeat
	&:checked
		//	checked
		& + label:after
			background-position 0 -11px
		//	focus
		& + label:before
			position relative