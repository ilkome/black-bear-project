//	#vars
// ===============================================
color-black = #1a1a1a
color-white = #fff
color-grey = #949494
color-grey-opacity = #f5f5f5
color-grey-opacity2 = #f0f0f0
color-grey-dark = #5f5f5f
color-red = #b64c4c
color-blue = #4691c2

font-roboto()
	font-family: 'Roboto', arial, tahoma, sans-serif
font-light()
	font-weight 300
font-regular()
	font-weight 500
font-bold()
	font-weight 700

font-main()
	font-size 14px
	color color-grey-dark
	font-roboto()
	font-regular()
font-link()
	color color-blue
font-header()
	color #252728
	font-weight normal
font-form()
	color #5f5f5f
	font-size 16px
	font-roboto()
font-grey()
	color color-grey-dark
bg-grey()
	background color-grey
font-16-ttu()
	font-size 16px
	color color-grey-dark
	font-weight 500
	text-transform uppercase


//	#reset
// ===============================================
*
	margin 0
	padding 0
	border 0
	outline 0

//	#list
ul
	margin 0 0 15px 0px
	li
		margin 0 0 20px 15px
		list-style disc outside
		ul, ol
			margin 15px 0 10px 0
ol
	margin 0 0 15px 0
	li
		margin 0 0 15px 15px
		list-style decimal inside
		ul, ol
			margin 15px 0 10px 0
.no-list-style 
	margin 0
	li
		margin-left 0
		list-style-type none
.list-style-grey
	lino()
	li
		position relative
		margin-bottom 20px
		padding-left 20px
		line-height 20px
	li:before
		content " "
		position absolute 
		left 0px 
		top 6px
		width 8px
		height 8px
		border-radius 10px
		background color-blue-grey
.no-list-style-no-mr
	lino()
	li
		margin 0

//	#text
p
	margin-bottom 20px


//	#links
a
	font-link()
	text-decoration none
	anim-all()
	&:hover
		tdn()
		color color-red
	&.active
		cursor default 
		tdn()
li.is-active a 
	cursor default
	tdn()


//	#headers
h1, h2, h3, h4, h5, h6
	margin 0 0 30px 0
	color color-grey-dark
	font-light()
h1
	font-size 36px
	line-height 44px
h2
	font-size 36px
h3
	font-size 28px
h4
	font-size 16px


//	#form
label, input, button, select, textarea
	font-form()

select
	width 270px
	margin-bottom 10px
	height 53px
	padding 0px 10px
	full()
	font-form()
	background #fff
	border 1px solid #d6d6d6
	border-radius 4px
	anim()
	&:hover
		border-color alpha(color-grey, .7)
	&:focus
		border-color color-grey
	&.select-grey
		background #f5f5f5
	option
		width auto
		padding 5px 10px
		color color-grey-dark
		border-color none
	&.full
		width 100%
	&.width-500
		width 500px

input[type="text"]
input[type="password"]
input[type="email"]
input[type="phone"]
	width 310px
	margin-bottom 20px
	padding 15px 20px
	full()
	background #fff
	border 1px solid #d6d6d6
	border-radius 4px
	anim()
	&:hover
		border-color alpha(color-grey, .7)
	&:focus
		border-color color-grey
input.input-full, input.full
	width 100%
	full()

input.input-trans
	width 100%
	margin 0
	padding 0
	background 0
	border 0
	font-size 36px
	font-light()
.input-with-price
	position relative
	display inline-block
	input
		padding-right 45px
	&:after
		content " "
		z-index 30
		position absolute 
		right 15px 
		top 17px
		width 18px
		height 18px
		background url("../img/icons/rub.png") no-repeat

input[type="submit"]
	width auto
	padding 15px 30px
	border none
	anim()
	&:hover
		background #1aa257
	&:active
		opacity 0.8

textarea
	width 100%
	max-width 100%
	height 250px
	margin-bottom 20px
	padding 20px
	full()
	background #fff
	border 1px solid #d6d6d6
	border-radius 4px
	anim()
	&:hover
		border-color alpha(color-grey, .7)
	&:focus
		border-color color-grey
.textarea_full
	width 100%

//	#radio
input[type="radio"] + label 
	cursor:pointer
	margin:0px 20px 0px 0
	font-form()
input[type="radio"] + label::before 
	content " "
	display inline-block
	height 18px
	width 18px
	margin 0 10px -3px 0px
	background url("../img/radio.png") no-repeat;
input[type="radio"]
	display:none
input[type="radio"]:disabled + label 
	cursor:default
input[type="radio"] + label:hover::before
	background-position 0px 0px
input[type="radio"]:checked + label::before 
	background-position 0 -18px
input[type="radio"]:disabled + label::before 
	background-position:0px 0px
	opacity .8
input[type="radio"]:checked:disabled + label::before 
	background-position 0px -18px
	opacity .8

//	#checkbox
input[type="checkbox"]
	width 21px
	height 21px
	margin 0 3px 0 0
	vertical-align top
input[type="checkbox"]
	& + label
		cursor pointer
	&:not(checked)
		position absolute
		opacity 0
		& + label
			position relative
			display inline-block
			padding 0 0 0 35px
			font-size 14px
		& + label:after
			content ''
			position absolute
			top -3px
			left 0px
			width 21px
			height 21px
			background url("../img/checkbox-b.png") no-repeat
	&:checked
		//	checked
		& + label:after
			background-position 0 -21px
		//	focus
		& + label:before
			position relative
			
input[type="checkbox"].checkbox-right
	& + label
		cursor pointer
	&:not(checked)
		position absolute
		opacity 0
		& + label
			position relative
			display block
			padding 0 40px 0 0
			font-size 14px
		& + label:after
			content ''
			position absolute
			top 3px
			left inherit
			right 0px
			width 11px
			height 11px
			background url("../img/checkbox.png") no-repeat
	&:checked
		//	checked
		& + label:after
			background-position 0 -11px
		//	focus
		& + label:before
			position relative

//	#table
table
	width 100%
	td
		vertical-align top