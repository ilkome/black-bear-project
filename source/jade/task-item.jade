						.rating__num 4
				+rating
				+rating
				+rating
				+rating
		
		.greybox
			.fl-right
				+pager-small
			.greybox__name: h3 Таблица лидеров
			.greybox__content
				.leaders
					.leader_ header
						.leader__place: a(href="#").sort-desc.is-active
						.leader__name: a(href="#")
						.leader__changes: a(href="#")
						.leader__dinamics: a(href="#")
						.leader__scores: a(href="#")
					
					mixin leader(num, name, changes, persentage) 
						.leader
							.leader__place= num
							.leader__name
								a(href="#")
									.pic: img(src="img/content/solutions-pic.png", alt="")
									.name= name
							.leader__changes
								if changes == "down" 
									.count 3
									.status.status_down
								else 
									.count 10
									.status.status_up
							.leader__dinamics: img(src="img/content/leader-dinamics.png", alt="")
							.leader__scores
								.scoregraph
									.scoregraph__wrap
										.scoregraph__in(style="width:#{persentage}%")
									.scoregraph__count #{persentage}0
					+leader(
						"1",
						"Александра Киаби",
						"down",
						"90"
					) 
					+leader(
						"2",
						"Алена Миланская",
						"up",
						"80"
					)
					+leader(
						"3",
						"Глеб Винокуров",
