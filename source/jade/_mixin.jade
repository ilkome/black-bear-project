mixin page-search(type)
	.page-search
		.page-search-form
			.inp.fl-left
				input(type="text", placeholder="Поиск в мероприятиях").inp-search.inp_dark
			if type == "list"
				.list.fl-left
					select.select.select_dark
						option(value="0") Тип документа
						option(value="1") Обычный
						option(value="2") Класический
						option(value="3") Разнообразный
			else 
				.dates.fl-left
					input(type="text", placeholder="01.11.2014").inp-search_sm.inp_dark
					span.sep
					input(type="text", placeholder="03.11.2014").inp-search_sm.inp_dark
			
			.action
				input(type="submit", value="Найти").btn.btn_blue_wide
		.page-search-found
			.count Найдено мероприятий: 2465
			.pages 
				.pages__name Выводить по: 
				ul.pages__list
					li: a(href="#") 10
					li.is-active: a(href="#") 25
					li: a(href="#") 50
