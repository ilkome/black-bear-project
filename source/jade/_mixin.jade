mixin pager(center, red)
	ul.pager(
			class=typeof 
			center === "undefined" ? undefined : "pager_center"
			class=typeof 
			red === "undefined" ? undefined : "pager_red"
				
		)
		li.prev.is-disable: a(href="#") назад
		li.is-active: a(href="#") 1
		li: a(href="#") 1
		li: a(href="#") 2
		li: a(href="#") 3
		li: a(href="#") 4
		li: a(href="#") 5
		li: a(href="#") 6
		li: a(href="#") 7
		li: span.sep ...
		li: a(href="#") 27
		li.next: a(href="#") Вперед
